{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG"
            ],
            "windows": {
                "command": "C:/msys64/mingw64/bin/mingw32-make.exe",
                "args": [
                    "PLATFORM=PLATFORM_DESKTOP",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "process",
            "command": "make",
            "args": [
                "clean"
            ],
            "windows": {
                "command": "C:/msys64/mingw64/bin/mingw32-make.exe",
                "args": [ 
                    "clean"
                ]
            },
            "group": "none",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=RELEASE"
            ],
            "windows": {
                "command": "C:/msys64/mingw64/bin/mingw32-make.exe",
                "args": [
                    "PLATFORM=PLATFORM_DESKTOP",
                    "BUILD_MODE=RELEASE"                    
                ]
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run release",
            "type": "process",
            "command": "./${workspaceFolder}/build/APG",
            "args": [    ],
            "windows": {
                "command": "${workspaceFolder}/build/APG.exe",
                "args": [
                    "data/raceforspace.jpg",
                    "data/raceforspace.txt"
                ]
            },
            "dependsOn": ["clean","build release"],
            "dependsOrder": "sequence",
            "group": "none",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}